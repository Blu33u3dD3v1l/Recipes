@model RecipesShare.Models.Home.RecipeModel

@{
    ViewBag.Title = "Add Recipe";
}

<div class="container">
    <h2 class="text-center mt-5 mb-4">You can add your recipe here.</h2>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form method="post" asp-action="AddRecipe" asp-controller="Recipe">
                <div class="form-group">
                    <label asp-for="@Model.Name">Recipe Name</label>
                    <input asp-for="@Model.Name" type="text" class="form-control" placeholder="Enter recipe name">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Description">Recipe Description</label>
                    <textarea asp-for="@Model.Description" class="form-control" rows="3" placeholder="Enter recipe description"></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ImageUrl">Recipe Image URL</label>
                    <input asp-for="@Model.ImageUrl" type="text" class="form-control" placeholder="Enter URL for recipe image">
               </div>

                    <div class="form-group">
                        <div class="ingredient-input">
                            <label asp-for="@Model.Ingredients">Ingredients</label>
                            <input asp-for="@Model.Ingredients" type="text" class="form-control" placeholder="Enter ingredients separadet with single coma!">
                        </div>
                    </div>
                <div class="form-group">
                    <label asp-for="@Model.Instructions">Instructions</label>
                    <input asp-for="@Model.Instructions" type="text" class="form-control" placeholder="Enter Instructions here!">
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success">Save Recipe</button>
                </div>
                    
            </form>
           
        </div>
    </div>
</div>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}