@model IEnumerable<RecipesShare.Models.Home.RecipeModel>


@{
    ViewBag.Title = "My Recipe";
}

@if (Model.Count() > 0)
{
    <section class="popular-recipes-section">
        <div class="container">
            <h2 class="text-center mb-4">My Recipes</h2>
            <div class="row">
                @foreach (var recipe in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card border border-gold">
                            <img src="@recipe.ImageUrl" class="card-img-top" alt="Recipe Image">
                            <div class="card-body">
                                <h5 class="card-title">@recipe.Name</h5>
                                <p class="card-text recipe-description d-none">@recipe.Description</p>
                                <button class="btn btn-link toggle-description-btn descr">Description</button>
                                <a asp-area="" asp-controller="Recipe" asp-action="RecipeDetails" asp-route-id="@recipe.Id" class="btn btn-primary recipeview">View Recipe</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}
else
{
    <div class="MineNoTrainers container-fluid">
        <h3 class="text-center my-5"><i>There is no recipes!</i></h3>
    </div>
}
