@model RecipesShare.Models.Home.RecipeModel


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Edit Recipe</h5>
                    <form method="POST">
                        <div class="form-group">
                            <label asp-for="Name">Recipe Name</label>
                            <input asp-for="Name" type="text" class="form-control-file" id="profilePicture">
                            <span asp-validation-for="@Model.Name" class="small text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description">Recipe Description</label>
                            <input asp-for="Description" type="text" class="form-control" id="firstName">
                            <span asp-validation-for="@Model.Description" class="small text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ImageUrl">Recipe Image URL</label>
                            <input asp-for="ImageUrl" type="text" class="form-control" id="lastName">
                            <span asp-validation-for="@Model.ImageUrl" class="small text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Ingredients">Ingredients</label>
                            <input asp-for="Ingredients" type="text" class="form-control" value="@Model?.Ingredients" />
                            <span asp-validation-for="@Model!.Ingredients" class="small text-danger"></span>
                        </div>                                             
                        <div class="form-group">
                            <label asp-for="Instructions">Instructions</label>
                            <input asp-for="Instructions" type="text" class="form-control" id="location">
                            <span asp-validation-for="@Model!.Instructions" class="small text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CookTime">CookTime</label>
                            <input asp-for="CookTime" type="text" class="form-control" id="location">
                            <span asp-validation-for="@Model!.CookTime" class="small text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Edit Recipe</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}