@model IEnumerable<RecipesShare.Models.Home.RecipeModel>


<section class="hero-section text-center">
    <div class="container">
        <h1>Welcome to Recipes Share</h1>
        <p>Discover and share delicious recipes from around the world</p>
        <a href="#" class="btn btn-primary">Get Started</a>
    </div>
</section>

<section class="popular-recipes-section">
    <div class="container">
        <h2 class="text-center mb-4">Popular Recipes</h2>
        <div class="row">    
            @foreach (var recipes in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card border border-gold">
                        <img src="@recipes.ImageUrl" class="card-img-top" alt="Recipe Image">
                        <div class="card-body">
                            <h5 class="card-title">@recipes.Name</h5>
                            <p class="card-text">@recipes.Description</p>
                            <a href="#" class="btn btn-primary">View Recipe</a>
                        </div>
                    </div>
                </div>
            }          
        </div>
    </div>
</section>
