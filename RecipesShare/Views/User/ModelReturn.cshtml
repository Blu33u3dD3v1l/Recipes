@model RecipesShare.Models.Home.ApplicationUser


<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <img src="@Model.ImageUrl" class="card-img-top profile-img" alt="Profile Picture">
                <div class="card-body">
                    <h5 class="card-title">@Model.FirstName @Model.LastName</h5>
                    <p class="card-text">Location: @Model.Location</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">First Name: @Model.FirstName</li>
                    <li class="list-group-item">Last Name: @Model.LastName</li>
                    <li class="list-group-item">Location: @Model.Location</li>
                </ul>
                <div class="card-body">
                    <a href="ProfileFill" class="card-link">Edit Profile</a>
                    <a href="#" class="card-link">Change Password</a>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">About Me</h5>
                    <p class="card-text">@Model.AboutMe</p>
                </div>
            </div>
        </div>
    </div>
</div>

