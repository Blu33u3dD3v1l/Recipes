@model RecipesShare.Data.Models.ApplicationUser


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Profile</h5>
                    <form method="POST">
                        <div class="form-group">
                            <label asp-for="ImageUrl">Profile Picture</label>
                            <input asp-for="ImageUrl" type="text" class="form-control-file" id="profilePicture">
                            <span asp-validation-for="@Model.ImageUrl" class="small text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FirstName">First Name</label>
                            <input asp-for="FirstName" type="text" class="form-control" id="firstName">
                            <span asp-validation-for="@Model.FirstName" class="small text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName">Last Name</label>
                            <input asp-for="LastName" type="text" class="form-control" id="lastName">
                            <span asp-validation-for="@Model.LastName" class="small text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Sex">Sex</label>
                            <input asp-for="Sex" type="text" class="form-control" id="location">
                            <span asp-validation-for="@Model.Sex" class="small text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Location">Location</label>
                            <input asp-for="Location" type="text" class="form-control" id="location">
                            <span asp-validation-for="@Model.Location" class="small text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Country">Country</label>
                            <input asp-for="Country" type="text" class="form-control" id="Country">
                            <span asp-validation-for="@Model.Country" class="small text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AboutMe">About Me</label>
                            <textarea asp-for="AboutMe" class="form-control" id="aboutMe" rows="3">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut rhoncus odio eget risus luctus, a dictum libero efficitur.</textarea>
                            <span asp-validation-for="@Model.AboutMe" class="small text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}