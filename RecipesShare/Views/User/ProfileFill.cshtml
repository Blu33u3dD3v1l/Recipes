@model RecipesShare.Models.Home.ApplicationUser


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Profile</h5>
                    <form method="POST">
                        <div class="form-group">
                            <label asp-for="@Model.ImageUrl">Profile Picture</label>
                            <input asp-for="@Model.ImageUrl" type="text" class="form-control-file" id="profilePicture">
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.FirstName">First Name</label>
                            <input asp-for="@Model.FirstName" type="text" class="form-control" id="firstName" value="John">
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.LastName">Last Name</label>
                            <input asp-for="@Model.LastName" type="text" class="form-control" id="lastName" value="Doe">
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Sex">Sex</label>
                            <input asp-for="@Model.Sex" type="text" class="form-control" id="location" value="M/F">
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Location">Location</label>
                            <input asp-for="@Model.Location" type="text" class="form-control" id="location" value="Town">
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Country">Country</label>
                            <input asp-for="@Model.Country" type="text" class="form-control" id="Country" value="New York">
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.PhoneNumber">Phone</label>
                            <input asp-for="@Model.PhoneNumber" class="form-control" id="aboutMe" rows="3">
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.AboutMe">About Me</label>
                            <textarea asp-for="@Model.AboutMe" class="form-control" id="aboutMe" rows="3"></textarea>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.SocialMediaProfileUrl">Social Media Link</label>
                            <input asp-for="@Model.SocialMediaProfileUrl" class="form-control" id="aboutMe" rows="3">
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.AdditionalInfo">Additional Info</label>
                            <textarea asp-for="@Model.AdditionalInfo" class="form-control" id="aboutMe" rows="3">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut rhoncus odio eget risus luctus, a dictum libero efficitur.</textarea>
                        </div>
                       
                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>