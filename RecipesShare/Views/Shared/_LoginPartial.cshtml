@using Microsoft.AspNetCore.Identity
@using RecipesShare.Data.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{

    <div class="navbar align-items-center" style="margin-left: auto;">
        <ul class="navbar-nav mr-auto">

            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    @User.Identity?.Name
                </a>
                @if(User?.Identity?.IsAuthenticated ?? false)
                {
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <!-- Dropdown items go here -->
                        <a class="dropdown-item" asp-area="" asp-controller="User" asp-action="Profile">Profile</a>
                        <a class="dropdown-item" asp-area="" asp-controller="Recipe" asp-action="AddRecipe">Add Recipe</a>
                        <div class="dropdown-divider"></div>
                        <form class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button style="color: black; margin-left: 20px; font-weight: 500" type="submit" class="log-out btn btn-link">Logout</button>
                        </form>
                    </div>
                }                
            </li>
        </ul>
    </div>


}
else
{
    <div class="navbar align-items-center" style="margin-left: auto;">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        </ul>
    </div>
}

